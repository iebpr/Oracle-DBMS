--TABLE 삭제(DROP TABLE 테이블이름)
DROP TABLE EMP; -- EMP(사원)
DROP TABLE DEPT; -- DEPT(부서)
DROP TABLE SALGRADE;  --SALGRADE(급여)

--TABLE 생성(CREATE TABLE 테이블이름)
CREATE TABLE DEPT(
        DEPTNO NUMBER(2) CONSTRAINT PK_DEPT PRIMARY KEY, --DNO (부서번호)
         DNAME VARCHAR2(14), --DNAME (부서이름)
	 LOC   VARCHAR2(13) ) ; -LOC   (부서위치)
-TABLE 안에 데이터 삽입(INSERT INTO  TABLE(테이블이름) VALUES (VALUE1, VALUES2, VALUES3 )
