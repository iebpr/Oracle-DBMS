CREATE TABLE EMP 
        (EMPNO NUMBER(4) CONSTRAINT PK_EMP PRIMARY KEY, ----사원번호
	 ENAME VARCHAR2(10), --사원이름
 	 JOB   VARCHAR2(9),  --사원업무
	 MGR  NUMBER(4), --사원의 관리자
	 HIREDATE DATE, --입사일(DATE 타입)
	 SAL NUMBER(7,2), --월급
	 COMM NUMBER(7,2), --인센티브/보너스
	 DNO NUMBER(2) CONSTRAINT FK_DNO REFERENCES DEPT);
